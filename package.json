{
  "name": "front-end-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=local nodemon --exec babel-node system/server.js",
    "prebuild": "rimraf ./production",
    "build": "NODE_ENV=production babel-node system/build.js && yarn cpx",
    "cpx": "cpx \"src/**/**/*.{gif,png,jpg,ico,svg,mp3,mp4,webm,eot,ttf,otf,woff,woff2,xml,json,txt,webmanifest,htaccess}\" production",
    "lint:pug": "pug-lint --reporter node_modules/puglint-stylish .",
    "lint:style": "stylelint --fix --ignore-path .gitignore \"**/*.scss\"",
    "lint:script": "eslint --fix --ext .ts --ignore-path .eslintignore .",
    "lint-staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.pug": [
      "yarn lint:pug",
      "git add --force"
    ],
    "*.ts": [
      "yarn lint:script",
      "git add --force"
    ],
    "*.scss": [
      "yarn lint:style",
      "git add --force"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kota06240708/front-end-boilerPlate.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kota06240708/front-end-boilerPlate/issues"
  },
  "homepage": "https://github.com/kota06240708/front-end-boilerPlate#readme",
